<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Version>1.0.0</Version>
        <Authors>Samuel Lucas</Authors>
        <Description>A .NET implementation of scrypt.</Description>
        <Copyright>Copyright (c) 2024 Samuel Lucas</Copyright>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/samuel-lucas6/scrypt.NET</PackageProjectUrl>
        <RepositoryUrl>https://github.com/samuel-lucas6/scrypt.NET</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>scrypt kdf pbkdf password-hash password-hashing password-kdf memory-hard</PackageTags>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    </PropertyGroup>

</Project>
